            @Html.ValidationMessageFor(m => m.IsResident)
            <br /><br />
            @Html.LabelFor(m => m.CourtName)
            <br />
            @Html.TextBoxFor(m => m.CourtName)
            @Html.ValidationMessageFor(m => m.CourtName)
            <br /><br />
            @Html.LabelFor(m => m.CourtCaseNumber)
            <br />
