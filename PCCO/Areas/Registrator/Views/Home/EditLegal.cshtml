            @Html.ValidationMessageFor(m => m.CourtCaseNumber)
            <br /><br />
            @Html.LabelFor(m => m.CourtSentenceDate)
            <br />
            @Html.TextBoxFor(m => m.CourtSentenceDate, new {type="date"})
            @Html.ValidationMessageFor(m => m.CourtSentenceDate)
            <br /><br />
            @Html.LabelFor(m => m.CourtSentenceNumber)
            <br />
            @Html.TextBoxFor(m => m.CourtSentenceNumber)
