@model List<PCCO.Models.ViewModels.UserIndividualViewModel>

@if (Model.Count() > 0)
{
    <div id="individualItemsList">
        <table id="tableUserIndData" style="text-align: center;" class="cell-border hover">
            <thead>
                <tr>
                    <th>Fullname</th>
                    <th>Work position</th>
                    <th>Workplace</th>
                    <th>Offence description</th>
                    <th>Article number</th>
                    <th>Article title</th>
                    <th>Article content</th>
                    <th>Court name</th>
                    <th>Court case number</th>
                    <th>Court sentence date</th>
                    <th>Court sentence number</th>
                    <th>Court sentence applying date</th>
                    <th>Disciplinary action details</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr id="@item.GetHashCode()" onclick="expandRow(this.id)">
                        <td>
                            @item.LastName @item.FirstName @item.MiddleName
                        </td>
                        <td>@item.WorkPosition</td>
                        <td>@item.Workplace</td>
                        <td>@item.OffenceDescription</td>
                        <td>@item.ArticleNumber</td>
                        <td>@item.ArticleTitle</td>
                        <td>@item.ArticleContent</td>
                        <td>@item.CourtName</td>
                        <td>@item.CourtCaseNumber</td>
                        <td>@item.CourtSentenceDate.Date.ToShortDateString()</td>
                        <td>@item.CourtSentenceNumber</td>
                        <td>@item.CourtSentenceApplyingDate.Date.ToShortDateString()</td>
                        <td>@item.DisciplinaryActionDetails</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div style="text-align: center">
        <h4>No results found matching your search.</h4>
    </div>
}

<script src="~/js/datatables/userIndividualTable.js"></script>