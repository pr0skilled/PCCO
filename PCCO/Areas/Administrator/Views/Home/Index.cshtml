@model List<Models.ApplicationUser>

@{
    ViewData["Title"] = "Create Registrator";
}

<div class="text-center" style="margin-bottom: 10px;">
    <a class="nav-link" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
</div>

<div class="container py-5">
    <div class="row">
        <div class="col-lg-6 mx-auto">
            <div class="card ">
                <div class="card-header pt-4">
                    <div class="tab-content" id="pills-tabContent" style="text-align:left">
                        <div class="tab-pane fade show active" id="pills-individual" role="tabpanel" aria-labelledby="pills-individual-tab">
                            <form asp-action="Index" asp-controller="Home" asp-area="Administrator" method="get">
                                <div class="form-group">
                                    <label for="lastName">
                                        <h6>Last name</h6>
                                    </label>
                                    <input type="text" id="lastName" name="lastName" class="form-control ">
                                </div>
                                <div class="form-group">
                                    <label for="idCode">
                                        <h6>Identification code</h6>
                                    </label>
                                    <input type="text" data-val-length-max="10" data-val-length-min="10" data-val-range-max="9999999999" data-val-range-min="1" id="idCode" name="idCode" class="form-control ">
                                </div>
                                <div>
                                    <button type="submit" class="search-btn subscribe btn btn-primary btn-block shadow-sm"> Search </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@if (Model.Count() != 0)
{
    <div id="registratorsList" style="text-align: center">
        <table id="regTable" class="cell-border hover">
            <thead>
                <tr>
                    <th>@Html.Label("Fullname")</th>
                    <th>@Html.Label("Email")</th>
                    <th>@Html.Label("Identification code")</th>
                    <th>@Html.Label("Workplace")</th>
                    <th>@Html.Label("Work position")</th>
                    <th>@Html.Label("Phone number")</th>
                    <th>@Html.Label("Birthday")</th>
                    <th>Actions</th>
                </tr>
            </thead>
            @foreach (var item in Model)
            {
                <tbody>
                    <tr>
                        <td>@Html.DisplayTextFor(modelitem => item.UserName)</td>
                        <td>@Html.DisplayFor(modelitem => item.Email)</td>
                        <td>@Html.DisplayTextFor(modelitem => item.IdentificationCode)</td>
                        <td>@Html.DisplayFor(modelitem => item.Workplace)</td>
                        <td>@Html.DisplayFor(modelitem => item.WorkPosition)</td>
                        <td>@Html.DisplayFor(modelitem => item.PhoneNumber)</td>
                        <td>@Html.DisplayFor(modelitem => item.Birthday)</td>
                        @Html.HiddenFor(modelitem => item.Id)
                        <td class="text-center">

                            <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id"><i class="bi bi-trash-fill"></i>Delete</a>
                        </td>
                    </tr>
                </tbody>
            }
        </table>
    </div>
}

@section Scripts
    {
    <script>
        $(document).ready(function() {
            $('#regTable').DataTable();
        });
    </script>
}