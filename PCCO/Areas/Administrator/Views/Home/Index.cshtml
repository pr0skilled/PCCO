@model List<Models.ApplicationUser>

@{
    ViewData["Title"] = "Create Registrator";
}

<div class="text-center" style="margin-bottom: 10px;">
    <a class="nav-link" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
</div>

<div class="container py-5">
    <div class="row">
        <div class="col-lg-6 mx-auto">
            <div class="card ">
                <div class="card-header pt-4">
                    <div class="tab-content" id="pills-tabContent" style="text-align:left">
                        <div class="tab-pane fade show active" id="pills-individual" role="tabpanel" aria-labelledby="pills-individual-tab">
                            <form asp-action="Index" asp-controller="Home" asp-area="Administrator" method="get">
                                <div class="form-group">
                                    <label for="lastName">
                                        <h6>Name</h6>
                                    </label>
                                    <input type="text" id="lastName" name="lastName" class="form-control ">
                                </div>
                                <div class="form-group">
                                    <label for="idCode">
                                        <h6>Identification code</h6>
                                    </label>
                                    <input type="text" data-val-length-max="10" data-val-length-min="10" data-val-range-max="9999999999" data-val-range-min="1" id="idCode" name="idCode" class="form-control ">
                                </div>
                                <div>
                                    <button type="submit" class="w-100 mt-3 subscribe btn btn-primary btn-block shadow-sm"> Search </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@if (Model.Count() != 0)
{
    <div id="registratorsList" style="text-align: center">
        <table id="regTable" class="cell-border hover">
            <thead>
                <tr>
                    <th>Fullname</th>
                    <th>Email</th>
                    <th>Identification code</th>
                    <th>Workplace</th>
                    <th>Work position</th>
                    <th>Phone number</th>
                    <th>Birthday</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <input asp-for="@item.Id" type="hidden" />
                        <td>@item.UserName</td>
                        <td>@item.Email</td>
                        <td>@item.IdentificationCode</td>
                        <td>@item.Workplace</td>
                        <td>@item.WorkPosition</td>
                        <td>@item.PhoneNumber</td>
                        <td>@item.Birthday.Date.ToShortDateString()</td>
                        <td>
                            <div class="container">
                                <div class="row">
                                    @if (item.LockoutEnd == null || item.LockoutEnd < DateTime.Now)
                                    {
                                        <a asp-action="LockUnlock" asp-route-userId="@item.Id" class="col btn m-1 btn-success text-white"><i class="bi bi-lock-fill"></i> Lock </a>
                                    }
                                    else
                                    {
                                        <a asp-action="LockUnlock" asp-route-userId="@item.Id" class="col btn btn-warning text-white"><i class="bi bi-unlock-fill"></i> Unlock </a>
                                    }
                                    <a asp-action="Edit" class="col btn m-1 btn-primary" asp-route-userId="@item.Id"><i class="bi bi-pencil-square"></i> Edit</a>
                                    <a class="col btn m-1 btn-danger" onclick="deleteAlert('/Administrator/Home/Delete?userId=@item.Id')"><i class="bi bi-trash-fill"></i> Delete </a>
                                </div>
                                <div class="row">
                                    <a asp-action="ResetPassword" class="col btn m-1 btn-danger" asp-route-userId="@item.Id"><i class="bi bi-key-fill"></i> Reset password </a>
                                    <a asp-action="ChangeEmail" class="col btn m-1 btn-danger" asp-route-userId="@item.Id"><i class="bi bi-envelope"></i> Change email </a>
                                    @if (item.TwoFactorEnabled)
                                    {
                                        <a asp-action="Disable2FA" class="col btn m-1 btn-danger" asp-route-userId="@item.Id"><i class="bi bi-qr-code-scan"></i> Disable 2FA </a>
                                    }
                                    else
                                    {
                                        <a asp-action="Disable2FA" class="col btn m-1 btn-dark disabled" asp-route-userId="@item.Id"><i class="bi bi-qr-code-scan"></i> Disable 2FA </a>
                                    }
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

@section Scripts
    {
    <script>
        $(document).ready(function() {
            $('#regTable').DataTable(
                {
                    responsive: true
                });
        });
    </script>
    <script src="~/js/deleteAlert.js"></script>
}