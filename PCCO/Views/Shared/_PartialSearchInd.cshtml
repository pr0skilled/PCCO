<div class="form-group">
    <label for="lastName">
        <h6>Last name</h6>
    </label>
    <input type="text" id="lastName" name="lastName" class="form-control ">
</div>
<div class="form-group">
    <label for="firstName">
        <h6>First name</h6>
    </label>
    <input type="text" id="firstName" name="firstName" class="form-control ">
</div>
<div class="form-group">
    <label for="middleName">
        <h6>Middle name</h6>
    </label>
    <input type="text" id="middleName" name="middleName" class="form-control ">
</div>
<div class="form-group">
    <label for="articleNumber">
        <h6>Article number</h6>
    </label>
    @Html.DropDownList("articleNumber", new SelectList(Model.Articles), "Номер статті", new { @class = "form-control" })
</div>
<div class="form-group">
    <label for="courtSentenceNumber">
        <h6>Court sentence number</h6>
    </label>
    <input type="text" id="courtSentenceNumber" name="courtSentenceNumber" class="form-control ">
</div>
<div class="form-group">
    <input type="hidden" id="IsIndividual" name="IsIndividual" class="form-control " value="true">
</div>
<div>
    <button type="submit" class="w-100 mt-3 subscribe btn btn-primary btn-block shadow-sm"> Search </button>
</div>